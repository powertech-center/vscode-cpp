                "default": []
              },
              "reverseDebugging": {
                "description": "Enable reverse debugging (Requires reverse execution support in the debug server, see User's Manual for details).",
                "type": "boolean",
                "default": false
              }
            }
          },
          "attach": {
            "properties": {
              "program": {
                "description": "Path to the program to attach to.",
                "type": "string"
              },
